<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loadingbackground"
    android:orientation="vertical" >

    
     <EditText
        android:id="@+id/editEmail"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_above="@+id/editPassWord"
        android:layout_alignLeft="@+id/editPassWord"
        android:background="@drawable/blank_01"
        android:layout_marginBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:ems="10"
        android:hint="E-mail"
        android:textColorHint="#ffffff"
        android:inputType="textEmailAddress" />
     
      <EditText
        android:id="@+id/editPassWord"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_above="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/blank_01"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#ffffff"
        android:inputType="textPassword" />
      
      

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/btnSignUp"
        android:layout_alignRight="@+id/editEmail"
        android:background="@drawable/login_01" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/editPassWord"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/signup_01" />

   




</RelativeLayout>