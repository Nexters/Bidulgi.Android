<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:weightSum="100" >

    <TextView
        android:id="@+id/boardTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:gravity="left|center_vertical"
        android:text="오늘따라 아들이 더 보고싶네요." />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/list_click_color_gray"
            android:weightSum="100" >

            <TextView
                android:id="@+id/boardWriterName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="17"
                android:background="@drawable/list_click_color"
                android:gravity="left|center_vertical"
                android:text="조나은" />

            <TextView
                android:id="@+id/boardWriteDate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="32"
                android:background="@drawable/list_click_color"
                android:gravity="center"
                android:paddingRight="1dp"
                android:text="2015.07.27" />

            <TextView
                android:id="@+id/boardWatchCount"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="51"
                android:background="@drawable/list_click_color"
                android:gravity="left|center_vertical"
                android:padding="10dp"
                android:paddingRight="1dp"
                android:text="조회수 : 0" />
        </TableRow>
    </TableLayout>

</LinearLayout>