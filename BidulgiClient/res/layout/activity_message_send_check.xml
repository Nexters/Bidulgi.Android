<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_round"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.teamnexters.bidulgi.client.MessageSendCheckActivity" >

    <Button
        android:id="@+id/btnNotSendMail"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/cancle" />

    <TextView
        android:id="@+id/txtCheckSendMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingExtra="7dp"
        android:text="정말로 편지를\n보내시겠습니까?"
        android:textColor="#59585b"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnSendMessage"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_below="@+id/txtCheckSendMessage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/send" />

</RelativeLayout>