<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp" >

    <TextView
        android:id="@+id/txtArticleTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="제목"
        android:textColor="#58595b" />

    <EditText
        android:id="@+id/editArticleTitle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/signup01"
        android:maxLength="120"
        android:maxLines="1"
        android:paddingLeft="10dp"
        android:singleLine="true"
        android:text="" />

    <TextView
        android:id="@+id/txtArticleContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="내용"
        android:textColor="#58595b" />

    <EditText
        android:id="@+id/editArticleContent"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/agree_border"
        android:maxLength="800"
        android:paddingLeft="10dp"
        android:text="" />

    
    
    <Button 
        android:id="@+id/btnSendArticle"
        android:layout_gravity="center_horizontal"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/upload"
        />

</LinearLayout>