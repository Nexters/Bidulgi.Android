<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@drawable/background_addfriend" >

    <TableLayout
        android:id="@+id/addFriendTableLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" >

        <TableRow
            android:id="@+id/addFriendTableRowTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtName"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="이름" />

                <EditText
                    android:id="@+id/editName"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:hint="비둘기 친구 이름"
                    android:textColor="#000000" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/addFriendTableRowMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtBirthDay"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="생년월일" />

                <EditText
                    android:id="@+id/editBirthDay"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/editName"
                    android:layout_below="@+id/editName"
                    android:ems="10"
                    android:hint="비둘기 친구  생일(6자리)"
                    android:inputType="number"
                    android:textColor="#000000" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/addFriendTableRowBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout android:orientation="horizontal" >

                <TextView
                    android:id="@+id/txtDate"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="입대날짜" />

                <TextView
                    android:id="@+id/editDate"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignLeft="@+id/editBirthDay"
                    android:layout_below="@+id/editBirthDay"
                    android:background="@drawable/box_02"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:paddingLeft="10dp"
                    android:textColor="#000000" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnAddFriend"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/addFriendTableLayout"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_addfriend" />

    <Button
        android:id="@+id/btnNotAddFriend"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/cancle" />

</RelativeLayout>