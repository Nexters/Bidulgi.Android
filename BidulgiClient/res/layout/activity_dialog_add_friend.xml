<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="300dp"
    android:background="@drawable/background_round"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="100" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:gravity="right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.5"
        android:gravity="right"
        android:weightSum="100" >

        <Button
            android:id="@+id/btnNotAddFriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.5"
            android:background="@drawable/cancle" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtAddFriendTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="친구 추가"
        android:textColor="#ff6884"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <TableLayout
        android:id="@+id/addFriendTableLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_weight="50"
        android:background="#f4f4f5"
        android:weightSum="90" >

        <TableRow
            android:id="@+id/addFriendTableRowTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_weight="30"
            android:background="#ffffff"
            android:gravity="center"
            android:weightSum="100" >

            <TextView
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:text="이름"
                android:textColor="#ff6884" />

            <EditText
                android:id="@+id/editName"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="60"
                android:background="@drawable/signup01"
                android:ems="10"
                android:paddingLeft="10dp"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:id="@+id/addFriendTableRowMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_weight="30"
            android:background="#ffffff"
            android:gravity="center"
            android:weightSum="100" >

            <TextView
                android:id="@+id/txtBirthDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:text="생년월일"
                android:textColor="#ff6884" />

            <EditText
                android:id="@+id/editBirthDay"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/editName"
                android:layout_below="@+id/editName"
                android:layout_weight="60"
                android:background="@drawable/signup01"
                android:ems="10"
                android:hint="6자리"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:textColor="#000000" />
        </TableRow>

        <TableRow
            android:id="@+id/addFriendTableRowBottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_weight="30"
            android:background="#ffffff"
            android:gravity="center"
            android:weightSum="100" >

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:gravity="center"
                android:text="입대날짜"
                android:textColor="#ff6884" />

            <TextView
                android:id="@+id/editDate"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/editBirthDay"
                android:layout_below="@+id/editBirthDay"
                android:layout_weight="60"
                android:background="@drawable/box_02"
                android:ems="10"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textColor="#000000" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="-훈련병 조회는 입소 다음주\n화요일부터 가능합니다."
        android:textColor="#ff6884" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:gravity="center"
        android:weightSum="100" >

        <Button
            android:id="@+id/btnAddFriend"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:background="@drawable/btn_addfriend" />
    </LinearLayout>

</LinearLayout>