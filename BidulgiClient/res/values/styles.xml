<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.Light">@style/TextAppearance.Holo.Widget.ActionBar.Menu</style>

    <!-- Application theme. -->
    <style name="CustomActionBarTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomActionBar</item>
        <item name="android:actionBarTabStyle">@style/CustomActionTabBar</item>
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.Holo.Widget.ActionBar.Menu</item>
    </style>

    <!-- ActionBar styles -->
    <style name="CustomActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/CustomActionBarTitleText</item>
        <item name="android:background">@drawable/logo_01</item>

        <!-- <item name="android:background">#ffffff</item> -->
    </style>

    <style name="CustomActionBarTitleText" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        
    </style>

    <!-- ActionBarTab styles -->
    <style name="CustomActionTabBar" parent="android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/actionbar_tabs_selector</item>
    </style>

    <!-- Application theme. -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#ff6884</item>
    </style>
    
    <style name="TextAppearance.Holo.Widget.ActionBar.Menu" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff6884</item>
    </style>

    <style name="DialogAddFriendTheme" parent="@android:style/Theme.Holo.Dialog.NoActionBar"></style>
    
    <!-- Application theme. -->
    <style name="WriteActionBarTheme" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/WriteActionBar</item>
        <item name="android:textColor">#ffffff</item>        
        <item name="android:actionMenuTextAppearance">@style/TextAppearance.Holo.Widget.ActionBar.Menu</item>
    </style>
    
     <!-- ActionBar styles -->
    <style name="WriteActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/WriteActionBarTitleText</item>
        <item name="android:background">#ff6884</item>

        <!-- <item name="android:background">#ffffff</item> -->
    </style>

    <style name="WriteActionBarTitleText" parent="android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_horizontal|left</item>
        
    </style>
    
    

</resources>